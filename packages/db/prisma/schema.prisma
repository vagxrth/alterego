generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Model {
  id             String           @id @default(uuid())
  name           String
  type           ModelType
  age            Int
  ethnicity      ModelEthnicity
  eyeColor       ModelEyeColor
  bald           Boolean
  triggerWord    String?
  tensorPath     String?
  requestId      String?
  status         Status           @default(Pending)
  createdAt      DateTime         @default(now())
  trainingImages TrainingImages[]
  outputImages   OutputImages[]
}

model TrainingImages {
  id        String   @id @default(uuid())
  modelId   String
  model     Model    @relation(fields: [modelId], references: [id])
  imageUrl  String
  createdAt DateTime @default(now())
}

model OutputImages {
  id        String   @id @default(uuid())
  prompt    String
  status    Status   @default(Pending)
  requestId String?
  modelId   String
  model     Model    @relation(fields: [modelId], references: [id])
  imageUrl  String
  createdAt DateTime @default(now())
}

model Pack {
  id        String        @id @default(uuid())
  name      String
  createdAt DateTime      @default(now())
  prompts   PackPrompts[]
}

model PackPrompts {
  id        String   @id @default(uuid())
  packId    String
  pack      Pack     @relation(fields: [packId], references: [id])
  prompt    String
  createdAt DateTime @default(now())
}

enum ModelType {
  Male
  Female
}

enum ModelEthnicity {
  White
  Black
  AsianAmerican
  EastAsian
  Indian
  Hispanic
  MiddleEastern
  Other
}

enum ModelEyeColor {
  Brown
  Blue
  Green
  Hazel
  Gray
  Other
}

enum Status {
  Pending
  Training
  Completed
  Failed
}
